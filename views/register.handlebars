<section id="register">
    <div class="inner-content">
        <h1 class="py-heading success">Sign Up</h1>
        <h2 class="sc-heading dark">
            <i class="fas fa-user"></i> Create Your Account
        </h2>
        <form action="" class="form">
            <div class="input-group">
                <input type="text" name="Name" id="name" placeholder="Name" />
            </div>
            <div class="input-group">
                <input type="email" id="email" name="Email Address" placeholder="Email Address" />
                <small class="small-info">This site uses Gmail so if you want a profile image use
                    Gmail</small>
            </div>
            <div class="input-group">
                <input type="password" name="Password" id="password" placeholder="Password" />
            </div>
            <div class="input-group">
                <input type="password" name="Confirm-Password" id="cnf-password" placeholder="Confirm password" />
            </div>
        </form>
        <button class="btn btn-primary">Register</button>
        <p>Already have an Account ?<a class="success" href="../templates/login.html">Sign In</a</p> </div> </section>