<section id="profile">
    <div class="inner-content mb-top">
        <h1 class="py-heading success">Edit Your Profile</h1>
        <p class="lead">
            <i class="fas fa-user"></i>Let's get some information to make your
            profile stand out
        </p>
        <small class="small-info">* Required</small>
        <form action="/profile/edit/{{profile.id}}/?_method=PUT" method="POST" class="form">
            <input type="hidden" name="?_method" value="PUT">
            <div class="input-group">
                <select name="professionalstatus" id="pro-status">
                    <option value="none">* Select Professional Status</option>
                    <option value="Front-end Developer">Front-end Developer</option>
                    <option value="Back-End Dveloper">Back-End Dveloper</option>
                    <option value="Full Stack Dveloper">Full Stack Developer</option>
                    <option value="Android Developer">Android Developer</option>
                    <option value="UI/UX Designer">UI/UX Designer</option>
                    <option value="Programmer">Programmer</option>
                </select>
                <label for="pro-status">
                    <small class="small-info">Give us an idea of where you are at in you career</small>
                </label>
            </div>
            <div class="input-group">
                <input type="text" id="organization" name="organization" placeholder="Organization"
                    value="{{profile.organization}}" />
                <label for=" organization">
                    <small class="small-info">Could be your own organization or one you work for</small>
                </label>
            </div>
            <div class="input-group">
                <input name="website" id="website" value="{{profile.website}}" placeholder="Website" />
                <label for="website">
                    <small class="small-info">Could be your own or an organization website</small>
                </label>
            </div>
            <div class="input-group">
                <input type="text" name="location" value="{{profile.location}}" id="location" placeholder="Location" />
                <label for="location">
                    <small class="small-info">City & state suggested (eg. Noida,UP)
                    </small>
                </label>
            </div>
            <div class="input-group">
                <input type="text" name="skills" value="{{profile.skills}}" id="skills" placeholder="* Skills" />
                <label for="website">
                    <small class="small-info">Please use comma separated values (eg. HTML,CSS,JavaScript,PHP)
                    </small>
                </label>
            </div>
            <div class="input-group">
                <input type="text" name="githubhandle" value={{profile.githubhandle}} id="github-user"
                    placeholder="Github Username" />
                <label for="website">
                    <small class="small-info">If you want your latest repos and a Github link, include your
                        username
                    </small>
                </label>
            </div>

            <div class="input-group">
                <textarea name="bio" id="bio" cols="30" rows="10"
                    placeholder="A short bio of yourself">{{profile.bio}}</textarea>
                <label for="bio">
                    <small class="small-info">Tell us a little about yourself </small>
                </label>
            </div>
            <P class="lead">Add Social Network Links
                <small class="small-info">(Optional)</small>
            </P>
            <div class="input-group url-input">
                <i class="fab fa-twitter fa-2x url-link"></i>
                <input name="twitter" id="twitter-url" value="{{profile.twitter}}" placeholder=" Twitter URL" />
            </div>
            <div class="input-group url-input">
                <i class="fab fa-facebook fa-2x url-link"></i>
                <input name="facebook" id="facebook-url" value="{{profile.facebook}}" placeholder="Facebook URL" />
            </div>
            <div class="input-group url-input">
                <i class="fab fa-youtube fa-2x url-link"></i>
                <input name="youtube" id="youtube-url" value="{{profile.youtube}}" placeholder="Youtube URL" />
            </div>
            <div class="input-group url-input">
                <i class="fab fa-linkedin fa-2x url-link"></i>
                <input name="linkedin" id="linkedin-url" value="{{profile.linkedin}}" placeholder="LinkedIn URL" />
            </div>
            <div class="input-group url-input">
                <i class="fab fa-instagram fa-2x url-link"></i>
                <input name="instagram" id="instagram-url" value="{{profile.instagram}}" placeholder="Instagram URL" />
            </div>
            <input type="submit" class="btn btn-primary" value="Submit" />
            <a class="btn btn-light" href="/dashboard"><i class="fas fa-arrow-left"></i>Go Back</a>
        </form>
    </div>
</section>