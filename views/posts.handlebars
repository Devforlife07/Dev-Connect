<section id="dashboard">
    <div class="inner-content mb-top">
        <h1 class="py-heading success">Posts</h1>
        <p class="lead">
            <i class="fas fa-user dashboard"></i> Welcome to the Community
        </p>
        <p class="lead sub-hd bg-primary">Say Something</p>
        <form action="/posts" method="POST" class="form">
            <div class="input-group">
                <textarea name="Post" id="post" placeholder="Say Something ..." cols="20" rows="10"></textarea>
            </div>
            <input type="submit" value="Submit" class="btn btn-dark" />

        </form>
        {{#each posts}}
        <div class="post bg-light">
            <div class="person-post">
                <div class="user-image">
                    <img src="{{this.user.image}}" alt="Vikas Verma" />
                     <h4 class="dark">{{this.user.firstName}} {{this.user.lastName}}</h4>
                </div>

               <div class="content">
                    <div class="info">
                      <p>
                         {{this.postBody}}
                      </p>
                    </div>
                    <div class="rate">
                      <button class="btn btn-dark">
                        <i class="fas fa-thumbs-up"></i>4
                      </button>
                      <button class="btn btn-dark">
                        <i class="fas fa-thumbs-down"></i>
                      </button>
                      <a href="/post" class="btn btn-primary discuss">Discussion</a>
                    </div>
               </div>
            </div> 
        </div>

        {{/each}}
    </div>
</section>